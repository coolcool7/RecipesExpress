                    div.form-group
                        label(for='Category') Category
                        <br />
                        select(id="Category", name="Category")
                            each category in categories
                                option(value=category.id) #{category}

                            <br />
                            <br />
                            <br />


                    div.form-group

                        button.btn.btn-primary(type='submit') Find

                    div#loadingDiv(width='100px' height='100px')






extends layout

block content
    script.


    script(type='text/javascript',src = 'https://cdnjs.cloudflare.com/ajax/libs/typeahead.js/0.11.1/typeahead.bundle.min.js')
    script(type='text/javascript', src='/js/someFile.js')


    div.container
        div.col1
            div.cheerLeader

                p Choose the category

